<h1>Album list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Titulo</th>
            <th>Publicacion</th>
            <th>Descripcion</th>
            <th>Foto</th>
            <th>Creacion</th>
            <th>Modificacion</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('album_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.titulo }}</td>
            <td>{{ entity.publicacion }}</td>
            <td>{{ entity.descripcion }}</td>
            <td>{{ entity.foto }}</td>
            <td>{% if entity.creacion %}{{ entity.creacion|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.modificacion %}{{ entity.modificacion|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('album_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('album_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('album_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
